<div class="container">
  <div class="thread">
    <div class="b-box b-box--dots">
      <span><span><%= link_to "", new_bundle_path, class: "b-box--dots__item is-active" %></span></span>
      <span class="b-box--dots__item"></span>
      <span class="b-box--dots__item"></span>
      <span class="b-box--dots__item"></span>
      <span class="b-box--dots__item big"> 0 € </i></span>
    </div>

    <div class="list-items">
      <div class="item">Recherche</div>
      <div class="item"></div>
      <div class="item"></div>
      <div class="item"></div>
    </div>
  </div>

  <div class="form-search">
    <%= form_tag bundles_path do %>
    <%= text_field_tag :starts_on, params[:starts_on], class: "form-control styled-form datepicker start_date", placeholder: "Du..." %>
    <%= text_field_tag :ends_on, params[:ends_on], class: "form-control styled-form datepicker end_date", placeholder: "Au..." %>
    <%= text_field_tag :where, params[:where], class: "form-control styled-form", placeholder: "Oú ?" %>
    <%= text_field_tag :capacity, params[:capacity], class: "form-control styled-form", placeholder: "Nombre d'invités" %>
    <%= text_field_tag :budget, params[:budget], class: "form-control styled-form", placeholder: "Budget" %>
  </div>

    <div class="service-cards">
