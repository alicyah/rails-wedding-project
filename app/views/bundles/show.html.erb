<div class="container">
  <div class="thread">
    <div class="b-box b-box--dots">
      <span class="b-box--dots__item is-active"></span>
      <span class="b-box--dots__item is-active"></span>
      <span class="b-box--dots__item is-active"></span>
      <span class="b-box--dots__item is-active"></span>
      <span class="b-box--dots__item big"><%= @bundle.amount.to_i %> € </span>
    </div>

    <div class="list-items">
      <div class="item-last">Recherche</div>
      <div class="item-last">Lieu</div>
      <div class="item-last">Services</div>
      <div class="item-last">Récapitulatif</div>
    </div>
  </div>

  <% if @bundle.state == "pending" %>

  <div class="row">
    <% @bundle.bundle_lines.each do |bundle_line| %>
      <div class="col-xs-12 bundle-recap" data-id="<%= bundle_line.id %>">
        <div class="list-element">
          <% if bundle_line.supplier.service.category == "lieu" %>
            <div class="list-image"><%= image_tag 'lieu.png', class:'small-picture' %></div>
          <% elsif bundle_line.supplier.service.category == "animations"%>
            <div class="list-image"><%= image_tag 'animations.png', class:'small-picture' %></div>
          <% elsif bundle_line.supplier.service.category == "traiteur"%>
          <div class="list-image"><%= image_tag 'traiteur.png', class:'small-picture' %></div>
          <% elsif bundle_line.supplier.service.category == "musique"%>
           <div class="list-image"><%= image_tag 'musique.png', class:'small-picture' %></div>
          <% elsif bundle_line.supplier.service.category == "photographe"%>
          <div class="list-image"><%= image_tag 'photographe.png', class:'small-picture' %></div>
          <% elsif bundle_line.supplier.service.category == "fleuriste"%>
          <div class="list-image"><%= image_tag 'fleuriste.png', class:'small-picture' %></div>
          <% end %>


          <div class="list-title"><h3><%= bundle_line.supplier.service_name  %></h3></div>
          <div class="price">
            <div><h5>Prix</h5></div>
            <div><h4> <%= bundle_line.amount.to_i %> <i class="fas fa-euro-sign"></i></h4></div>
          </div>
          <div class="angle">
            <a class="" data-toggle="collapse" href="#bundle-line-details-<%= bundle_line.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
              <i class="fas fa-angle-right"></i>
            </a>
          </div>
        </div>
        <div class="collapse" id="bundle-line-details-<%= bundle_line.id %>">
          <div class= "card card-body">
            <div class="card-image">
             <%= cl_image_tag bundle_line.supplier.images.first.photo, crop: :fill, height: 400, width: 400 %>
            </div>
            <div class="description">
              <h2><%= bundle_line.supplier.service_name %></h2>
              <p> <%= bundle_line.supplier.description %></p>
              <p>
                <strong>Le petit <i class="fas fa-plus plus"></i></strong> : <%= bundle_line.supplier.originality%>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= content_for :before_js do %>
    <script src="https://checkout.stripe.com/checkout.js"></script>
  <% end %>

  <div class="payment-info">
    <h3>Prix Total:</h3>
    <h4>EUR <strong><%= @bundle.amount %></strong></h4>
    <%= render "pending_payment", bundle: @bundle %>
  </div>

    <% else %>
      <!-- display confirmation message -->
  <% end %>
</div>
